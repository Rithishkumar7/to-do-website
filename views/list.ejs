<!DOCTYPE html>
<html lang="en">
  <head>
    <link rel="stylesheet" href="\style1.css">
    <!-- With FontAwesome: -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />


  </head>
  <body>
    <div>
      <nav style="padding: 10px; text-align: right;">
        <a href="/logout" style="color: var(--accent); text-decoration: none; font-weight: bold;">
          <i class="fas fa-sign-out-alt">Logout</i> 
        </a>
      </nav>
    </div>
    
    <div class="container" style="margin-top: 40px;">
      <div class="card" style="max-width: 700px; margin: 0 auto;">
        <div class="card-header">
          <% if (kindday === "Saturday") { %>
            <h1 style="color: var(--accent);">Hello World it's <%= kindday %></h1>
          <% } else { %>
            <h1 style="color: var(--accent);">Hello user it's <%= kindday %></h1>
          <% } %>
        </div>
        <div class="card-body">
          <ul style="margin-bottom: 18px;">
            <li>BUY MILK</li>
            <li>BUY MILK</li>
            <% newitem.forEach(function(item) { %>
              <li><%= item.items %></li>
            <% }); %>
          </ul>
          <form class="form" action="/secrets" method="post">
            <input type="text" name="name" placeholder="Enter task" required>
            <button type="submit" title="Add"><i class="fas fa-plus"></i></button>
          </form>
        </div>
      </div>
    </div>

  </body>

</html>
